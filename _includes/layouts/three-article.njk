<body class="three-article">
    {% include "header.njk" %}
    <article id="{{ author }}">
    <header class="article-header"><h1>{{ title }}</h1><h2>{{ author }}</h2></header>
    <figure>
    <img src="{% if featuredImage | length %}{{ featuredImage | url }}{% endif %}" alt="{% if featuredAltText | length %}{{ featuredAltText }}{% endif %}">
    <figcaption>{% if featuredFigCaption | length %}{{ featuredFigCaption }}{% endif %}</figcaption>
    </figure>

    {% if body | length %}{{ body | markdown | safe }}{% endif %}

    </article>
