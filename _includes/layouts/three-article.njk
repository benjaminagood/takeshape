{% include "head.njk" %}
<link rel="stylesheet" href="../../assets/css/style.css">
<link rel="stylesheet" href="../../assets/css/three.css">
</head>
<body class="three-article">
    {% include "header.njk" %}
    <article id="{{ author }}">
    <header class="article-header"><h1>{{ title }}</h1><h2>{{ author }}</h2></header>
    <figure class="featured">
    {% if featuredImage | length %}<img src="{{ featuredImage | url }}" alt="{% if featuredAltText | length %}{{ featuredAltText }}{% endif %}">{% endif %}
    <figcaption>{% if featuredFigCaption | length %}{{ featuredFigCaption }}{% endif %}</figcaption>
    </figure>
    <section class="content">
    {{ content | safe }}
    </section>
    </article>
{% include "footer.njk" %}
